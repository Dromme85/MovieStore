@model IEnumerable<MovieStore.Models.OrderVM>

@{
	ViewBag.Title = "Order History for ";
}

@if (Model.Count() > 0 && Model != null)
{
<div class="jumbotron">
	<h2 class="">@ViewBag.Title @Model.First().Order.Customer.FirstName @Model.First().Order.Customer.LastName</h2>
	<p>You have made @Model.Count() order(s)</p>
	<table class="table table-borderless shadow bg-white">
		<tr class="bg-info">
			<th class="w-8 border-right">Order ID</th>
			<th class="w-25 border-right">Date</th>
			<th class="">Customer</th>
		</tr>
		@foreach (var item in Model)
		{
			@Html.Partial("_OrderPartial", item)
		}
	</table>
</div>
}
else
{
	<div>
		<br />
		<h2 class="mt-5">No orders made.</h2>
	</div>
}